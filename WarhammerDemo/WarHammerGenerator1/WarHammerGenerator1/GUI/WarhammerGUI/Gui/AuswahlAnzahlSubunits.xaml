<Window x:Class="WarhammerGUI.AuswahlAnzahlSpieler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bitte Anzahl der Subeinheiten festlegen!" Height="400" Width="600">
    <Grid>
        <TextBox BorderBrush="Black" Height="54" IsReadOnly="True" Margin="49,64,46,0" Name="announcementBox" VerticalAlignment="Top" TextAlignment="Justify" />
        <Label Content="Anzahl der Subeinheiten:" Height="28" HorizontalAlignment="Left" Margin="62,144,0,0" Name="label1" VerticalAlignment="Top" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="79,178,0,0" Name="anzahlSlider" VerticalAlignment="Top" Width="100" DataContext="{Binding}" />
        <Button Content="Weiter" Height="23" HorizontalAlignment="Right" Margin="0,305,133,0" Name="weiterButton" VerticalAlignment="Top" Width="75" Click="klickWeiter"/>
        <Button Content="Abbrechen" Height="23" HorizontalAlignment="Left" Margin="104,305,0,0" Name="abbrechenButton" VerticalAlignment="Top" Width="75" Click="klickAbbrechen" />
    </Grid>
</Window>
