<UserControl x:Class="GUI.RassenAuswahlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:rassenStruktur;assembly=HeldTestMat"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <HierarchicalDataTemplate DataType="{x:Type local:rassenStruct}" ItemsSource="{Binding Path=MoeglicheSubrassen}">
            <TextBlock Text="{Binding Path=Name}"></TextBlock>
        </HierarchicalDataTemplate>
        <HierarchicalDataTemplate DataType="{x:Type local:subrasse}">
            <TextBlock Text="{Binding Path=nameAlsString}"></TextBlock>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    <Grid>
        <TreeView HorizontalAlignment="Left" Name="treeViewRassen" VerticalAlignment="Top" MinHeight="200">
        </TreeView>

    </Grid>
</UserControl>
