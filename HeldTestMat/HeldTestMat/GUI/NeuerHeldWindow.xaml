<Window x:Class="GUI.NeuerHeldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:GUI"
        Title="Neuer Held" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" SizeToContent="WidthAndHeight">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="300"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0" Grid.Row="0" Height="300" Width="300" HorizontalAlignment="Left" Name="geschlechtTab" VerticalAlignment="Top" >
            <TabItem Header="Geschlecht" Name="GeschlechtTab" >
                <Controls:GeschlechtControl/>
            </TabItem>
            <TabItem Header="Kultur" Name="KulturTab" >
                <Controls:KulturControl/>
            </TabItem>
        </TabControl>
        <Button Content="OK" Grid.Row="1" Height="23"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="button1" Width="75" />
    </Grid>
</Window>
