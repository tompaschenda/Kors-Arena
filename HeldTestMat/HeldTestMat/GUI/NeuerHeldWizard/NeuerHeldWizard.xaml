<Window x:Class="GUI.NeuerHeldWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:GUI"
        Title="NeuerHeldWizard" Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../DSAStyles.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="../bilder/vergilbt_800x1076.png" />
    </Window.Background>
    <DockPanel>
        <Controls:WizardHeaderControl DockPanel.Dock="Top"></Controls:WizardHeaderControl>
        <Controls:WizardButtonsControl Back="WizardButtonsControl_Back" Next="WizardButtonsControl_Next" HorizontalAlignment="Center" DockPanel.Dock="Bottom"/>
        <Controls:StepIndicatorControl DockPanel.Dock="Left"></Controls:StepIndicatorControl>
        <Controls:WizardContentControl x:Name="wizardContentControl"></Controls:WizardContentControl>
    </DockPanel>
</Window>
